{
  "private": true,
  "name": "zucali-preact-modx-template",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "run-p lint test build:preact",
    "build:preact": "preact build",
    "serve": "run-s build serve:http",
    "serve:http": "http-server ./build",
    "dev": "preact watch",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore --fix .",
    "test": "jest",
    "upgrade-interactive": "npm-check --update"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-transform-async-functions": "^6.22.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-synacor": "^3.0.5",
    "eslint-plugin-import": "^2.18.2",
    "http-server": "^0.11.1",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.5",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "preact": "^10.0.0-rc.3",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^5.0.6",
    "preact-router": "^3.0.1"
  },
  "jest": {
    "preset": "jest-preset-preact"
  }
}
